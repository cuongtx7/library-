<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="autoIncrement" value="true"/>

    <!-- Added the entity ParamsInit. -->
    <changeSet id="21092025" author="cuongtx">
        <!--        _added_entity_category-->
        <createTable tableName="product"
                     remarks="This entity for storing the configuration of script with id equals id of this entity">
            <column name="id" type="varchar(60)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(60)">
                <constraints nullable="true"/>
            </column>

            <column name="id_category" type="varchar(60)">
                <constraints nullable="true"/>
            </column>

            <column name="description" type="varchar(60)">
                <constraints nullable="true"/>
            </column>

            <column name="created_by" type="varchar(60)">
                <constraints nullable="true"/>
            </column>

            <column name="created_date" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="last_modified_date" type="datetime">
                <constraints nullable="true"/>
            </column>

            <column name="last_modified_by" type="varchar(60)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createIndex indexName="id" tableName="product">
            <column name="id"/>
        </createIndex>
        <addForeignKeyConstraint
                baseTableName="product"
                baseColumnNames="id_category"
                constraintName="category111"
                referencedTableName="category"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>

