<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="autoIncrement" value="true"/>

    <!-- Added the entity ParamsInit. -->
    <changeSet id="21092025" author="cuongtx">
        <createTable tableName="order_detail"
                     remarks="Chi tiết đơn hàng: chứa sản phẩm trong đơn hàng">
            <column name="id_order" type="varchar(60)">
                <constraints nullable="false"/>
            </column>

            <column name="id_product" type="varchar(60)">
                <constraints nullable="false"/>
            </column>

            <column name="quantity" type="int">
                <constraints nullable="true"/>
            </column>

            <column name="unit_price" type="float">
                <constraints nullable="true"/>
            </column>

            <column name="discount" type="float">
                <constraints nullable="true"/>
            </column>

            <column name="created_by" type="varchar(60)">
                <constraints nullable="true"/>
            </column>

            <column name="created_date" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="last_modified_date" type="datetime">
                <constraints nullable="true"/>
            </column>

            <column name="last_modified_by" type="varchar(60)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <!-- Composite PK -->
        <addPrimaryKey tableName="order_detail"
                       columnNames="id_order, id_product"
                       constraintName="pk_orderdetail"/>

        <!-- FK đến order_table -->
        <addForeignKeyConstraint baseTableName="order_detail"
                                 baseColumnNames="id_order"
                                 constraintName="fk_orderdetail_order"
                                 referencedTableName="order_table"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <!-- FK đến product -->
        <addForeignKeyConstraint baseTableName="order_detail"
                                 baseColumnNames="id_product"
                                 constraintName="fk_orderdetail_product"
                                 referencedTableName="product"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>

